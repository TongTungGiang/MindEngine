<?xml version="1.0" encoding="UTF-8"?>
<rules>	
	<rule>
		<if>
			<character>
				<weapon>
					<ammo>0-50</ammo>
				</weapon>
			</character>
		</if>
		
		<action>Fire</action>
	</rule>

	<rule>
		<if>
			<character>
				<job>Soldier</job>
			</character>
		</if>		
		<action>Retire</action>
	</rule>
	
	<rule>
		<if>
			<character>
				<weapon>Machine</weapon>
			</character>
		</if>
		
		<action>Throw</action>
	</rule>
	
    <rule>
		<if>
			<character>
				<health>0-20</health>
			</character>
		</if>
		
		<action>Suicide</action>
	</rule>
</rules>
